<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="BlueButtonStyle">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:alpha">0.6</item>
        <item name="android:background">@drawable/shape_corner_button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlueTransparentButtonStyle">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/shape_transparent_button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainBottomButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:color">@color/colorDarkGray</item>
        <item name="android:background">@color/colorLightWhite</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>

    <style name="MainTopButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:color">@color/colorDarkGray</item>
        <item name="android:background">@color/colorLightWhite</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="TextView_Table_Right">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TransparentInputView">
        <item name="android:textColorHint">@color/colorGrayBorder</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/shape_tranparent_text</item>
        <item name="android:textColor">@color/colorGrayBorder</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginLittleButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorButton</item>
        <item name="android:background">@color/transParent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">#fff</item>
        <item name="actionMenuTextAppearance">@style/AppTheme.actionMenuTextSize</item>
        <item name="android:actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:popupBackground">@color/colorButton</item>
    </style>

    <style name="AppTheme.actionMenuTextSize" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="OverflowMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:popupBackground">@color/colorButton</item> <!--更改背景颜色-->
        <item name="android:background">@color/colorButton</item>
    </style>
</resources>
