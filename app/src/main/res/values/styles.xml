<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="BlueButtonStyle">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:alpha">0.6</item>
        <item name="android:background">@drawable/shape_corner_button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlueTransparentButtonStyle">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/shape_transparent_button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainBottomButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:color">@color/colorDarkGray</item>
        <item name="android:background">@color/colorLightWhite</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>

    
    

</resources>
