<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightWhite"
    tools:context=".fragment.OptionContract">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/choose_month">
        </Spinner>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightWhite">
            <TextView
                android:textColor="#FF4500"
                android:gravity="center"
                android:text="看涨合约"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/darkSlateGray"/>

            <TextView
                android:textColor="#DAA520"
                android:gravity="center"
                android:textSize="18sp"
                android:text="看跌合约"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightWhite"
            android:weightSum="5">
            <utf8.optadvisor.util.SyncHorizontalScrollView
                android:id="@+id/left_horizontal_up"
                android:scrollbars="none"
                android:layout_width="1dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="买量"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="买价"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="最新价"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="卖价"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="卖量"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="持仓量"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="振幅"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="涨跌幅"
                        android:gravity="center"/>
                </LinearLayout>
            </utf8.optadvisor.util.SyncHorizontalScrollView>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/darkSlateGray"/>

            <TextView
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="行权价"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/darkSlateGray"/>


            <utf8.optadvisor.util.SyncHorizontalScrollView
                android:id="@+id/right_horizontal_up"
                android:scrollbars="none"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/var"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="买量"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="买价"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="最新价"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="卖价"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="卖量"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="持仓量"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="振幅"
                        android:gravity="center"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="涨跌幅"
                        android:gravity="center"/>
                </LinearLayout>
            </utf8.optadvisor.util.SyncHorizontalScrollView>
        </LinearLayout>

   <LinearLayout
       android:background="@color/colorLightWhite"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:weightSum="5">

       <utf8.optadvisor.util.SyncHorizontalScrollView
           android:id="@+id/left_horizontal"
           android:layout_weight="2"
           android:scrollbars="none"
           android:layout_width="0dp"
           android:layout_height="match_parent">
           <android.support.v7.widget.RecyclerView
               android:id="@+id/call_option_recycler_view"
               android:layout_width="480dp"
               android:layout_height="wrap_content">
           </android.support.v7.widget.RecyclerView>
       </utf8.optadvisor.util.SyncHorizontalScrollView>
       <android.support.v7.widget.RecyclerView
           android:background="@color/colorGraySolid"
           android:id="@+id/strike_price_recycler_view"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent">
       </android.support.v7.widget.RecyclerView>
       <utf8.optadvisor.util.SyncHorizontalScrollView
           android:scrollbars="none"
           android:id="@+id/right_horizontal"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="2">
           <android.support.v7.widget.RecyclerView
               android:id="@+id/put_option_recycler_view"
               android:layout_width="480dp"
               android:layout_height="wrap_content">
           </android.support.v7.widget.RecyclerView>

       </utf8.optadvisor.util.SyncHorizontalScrollView>

   </LinearLayout>

    </LinearLayout>
    <ProgressBar
        android:layout_marginTop="100dp"
        android:indeterminateDuration="2000"
        android:id="@+id/option_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>