<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLightSkyBlue"
        android:layout_marginLeft="20dp"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:columnCount="4"
        android:rowCount="4">

        <TextView
            android:layout_width="87dp"
            android:layout_height="50dp"
            android:text="波动率/价格"
            android:paddingTop="14dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:text="上涨"
            android:textSize="16sp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:text="中性"
            android:textSize="16sp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:text="下跌"
            android:textSize="16sp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="@dimen/button_width"
            android:layout_height="50dp"
            android:text="增加"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:gravity="center"
            />

        <ImageButton
            android:id="@+id/allocation_ib_11"
            android:layout_width="@dimen/button_width"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/imagebutton_allocation"
            android:background="#ffffff"
            />

        <ImageButton
            android:id="@+id/allocation_ib_12"
            android:layout_width="@dimen/button_width"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/imagebutton_allocation"
            android:background="#ffffff"
            />

        <ImageButton
            android:id="@+id/allocation_ib_13"
            android:layout_width="@dimen/button_width"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/imagebutton_allocation"
            android:background="#ffffff"
            />

        <TextView
            android:layout_width="@dimen/button_width"
            android:layout_height="50dp"
            android:text="中性"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:gravity="center"
            />

        <ImageButton
            android:id="@+id/allocation_ib_21"
            android:layout_width="@dimen/button_width"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/imagebutton_allocation"
            android:background="#ffffff"
            />

        <ImageButton
            android:id="@+id/allocation_ib_22"
            android:layout_width="@dimen/button_width"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/imagebutton_allocation"
            android:background="#ffffff"
            />

        <ImageButton
            android:id="@+id/allocation_ib_23"
            android:layout_width="@dimen/button_width"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/imagebutton_allocation"
            android:background="#ffffff"
            />

        <TextView
            android:layout_width="@dimen/button_width"
            android:layout_height="50dp"
            android:text="降低"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:gravity="center"
            />

        <ImageButton
            android:id="@+id/allocation_ib_31"
            android:layout_width="@dimen/button_width"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/imagebutton_allocation"
            android:background="#ffffff"
            />

        <ImageButton
            android:id="@+id/allocation_ib_32"
            android:layout_width="@dimen/button_width"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/imagebutton_allocation"
            android:background="#ffffff"
            />

        <ImageButton
            android:id="@+id/allocation_ib_33"
            android:layout_width="@dimen/button_width"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/imagebutton_allocation"
            android:background="#ffffff"
            />

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorLightSkyBlue"
        android:layout_marginLeft="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/principle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="本金"
            android:gravity="end"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/allocation_et_principle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/principle"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:hint="0"
            android:textColor="#000000"
            android:lines="1"
            android:inputType="number|numberDecimal"
            android:background="@drawable/textview_border"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/allocation_et_principle"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLightBlue"
        android:layout_marginLeft="40dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/maxloss"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="最大允许损失"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/allocation_et_maxloss"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/maxloss"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:hint="0"
            android:textColor="#000000"
            android:lines="1"
            android:inputType="number|numberDecimal"
            android:background="@drawable/textview_border"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/allocation_et_maxloss"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLightBlue"
        android:layout_marginLeft="40dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/validtime"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="价格预期有效时间"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            />

        <Spinner
            android:id="@+id/allocation_spr_validtime"
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/validtime"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLightSkyBlue"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:id="@+id/allocation_setting_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
    </LinearLayout>

    <Button
        android:id="@+id/allocation_setting_next"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:text="下一步"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

</LinearLayout>