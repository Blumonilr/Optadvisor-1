<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/allocation_sk_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="预测价格范围"
        android:textStyle="normal"
        android:textColor="#000000"
        android:textSize="19sp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <SeekBar
            android:id="@+id/allocation_sk_progress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingBottom="3dp"
            android:paddingLeft="12dp"
            android:max="100"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:progressDrawable="@drawable/hedging_sb_progress"
            android:thumb="@drawable/hedging_sb_circle" />

        <TextView
            android:id="@+id/allocation_sk_max"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingLeft="12dp"
            android:text="2.457"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/allocation_sk_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="价格范围"
        android:textSize="18sp"
        android:gravity="center"/>
</LinearLayout>