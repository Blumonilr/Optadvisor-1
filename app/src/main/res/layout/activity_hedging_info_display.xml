<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HedgingInfoDisplayActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/pic_logo"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="#CCCCCC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_table_title_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="套期保值效果展示"
                    android:textColor="#000000"
                    android:textSize="35sp"
                    android:paddingBottom="10dp"
                    />

            </LinearLayout>

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="展示期权:"-->
                <!--android:textColor="#000000"-->
                <!--android:textSize="20sp"-->
                <!--android:textStyle="bold" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="ID"
                    app:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="名称"
                    app:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="买入卖出"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_wave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="看涨看跌"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="到期时间"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_soldprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="执行价格"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_finalprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="成交价格"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_portion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="比例"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_delta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="δ"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_gamma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="γ"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_theta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="θ"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_vega"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="α"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_rho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="ρ"
                    app:textSize="16sp" />
            </LinearLayout>

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="到达预期最大亏损:"-->
            <!--android:textColor="#000000"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:textSize="20sp"-->
            <!--android:textStyle="bold"/>-->

        <utf8.optadvisor.util.HedgingMenuItem
            android:id="@+id/hedging_maxloss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftIcon="@mipmap/ic_left"
            app:text="到达预期最大亏损"
            app:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="组合表现"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="#BF0815" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="type1"
                        android:layout_marginLeft="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="#088B05" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="type2"
                        android:layout_marginLeft="5dp" />

                </LinearLayout>
            </LinearLayout>

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#ffffff"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>