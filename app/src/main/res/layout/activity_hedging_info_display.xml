<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HedgingInfoDisplayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/pic_logo"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_table_title_left"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:singleLine="true"
                    android:text="套期保值效果展示"/>

            </LinearLayout>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="展示期权:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/hedging_display_tv_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="null"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/textview_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="名称"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:paddingRight="30dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/hedging_display_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="null"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/textview_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="买入卖出"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/hedging_display_tv_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="null"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/textview_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="看涨看跌"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/hedging_display_tv_wave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="null"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/textview_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="到期时间"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/hedging_display_tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="null"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/textview_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="执行价格"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/hedging_display_tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="null"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/textview_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="成交价格"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/hedging_display_tv_finalprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="null"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/textview_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="比例"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/hedging_display_tv_portion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="null"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/textview_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="delta"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/hedging_display_tv_delta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="null"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/textview_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="gamma"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/hedging_display_tv_gamma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="null"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/textview_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="theta"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/hedging_display_tv_theta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="null"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/textview_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="vega"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/hedging_display_tv_vega"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="null"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/textview_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="rho"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/hedging_display_tv_rho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="null"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/textview_border"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="到达预期最大亏损:"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>
</ScrollView>