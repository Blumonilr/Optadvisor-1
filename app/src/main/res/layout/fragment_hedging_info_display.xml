<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorButton"
    tools:context=".fragment.HedgingInfoDisplay"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="@color/colorButton">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_table_title_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="套期保值效果展示"
                    android:textColor="@color/colorLightWhite"
                    android:textSize="24sp"
                    android:paddingBottom="10dp"
                    />

            </LinearLayout>

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="展示期权:"-->
                <!--android:textColor="#000000"-->
                <!--android:textSize="20sp"-->
                <!--android:textStyle="bold" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_id"
                    app:text="期权代码"
                    app:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:text="名称"
                    app:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="买入卖出"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_wave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="看涨看跌"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="到期时间"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_soldprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="执行价格"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_finalprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="成交价格"
                    app:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_delta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="delta"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_gamma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="gamma"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_theta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="theta"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_vega"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="vega"
                    app:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <utf8.optadvisor.util.HedgingMenuItem
                    android:id="@+id/hedging_rho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIcon="@mipmap/ic_left"
                    app:text="rho"
                    app:textSize="16sp" />
            </LinearLayout>

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="到达预期最大亏损:"-->
            <!--android:textColor="#000000"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:textSize="20sp"-->
            <!--android:textStyle="bold"/>-->

        <utf8.optadvisor.util.HedgingMenuItem
            android:id="@+id/hedging_maxloss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftIcon="@mipmap/ic_left"
            app:text="到达预期最大亏损"
            app:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="组合表现"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorLightWhite"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#ffffff"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/hedging_info_bt_back"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/textWhite"
                    android:text="上一步"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/hedging_info_bt_add"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/textWhite"
                    android:text="加入我的组合"
                    android:textSize="16sp"/>

            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>