<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ModifyActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/user_info_modify_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:title="个人信息"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light">


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="1dp"
            android:background="#BDBDBD"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:ems="10"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="头像"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/user_modify_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD" />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="1dp"
            android:background="#BDBDBD"/>


        <utf8.optadvisor.widget.ModifyItem
            android:id="@+id/user_info_modify_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:modify_text="名称"
            android:background="#ffffff"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_marginLeft="15dp" />

        <utf8.optadvisor.widget.ModifyItem
            android:id="@+id/user_info_modify_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:modify_text="账号"
            android:background="#ffffff"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_marginLeft="15dp" />

        <utf8.optadvisor.widget.ModifyItem
            android:id="@+id/user_info_modify_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:modify_text="性别"
            android:background="#ffffff"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_marginLeft="15dp" />

        <utf8.optadvisor.widget.ModifyItem
            android:id="@+id/user_info_modify_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:modify_text="年龄"
            android:background="#ffffff"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_marginLeft="15dp" />

        <utf8.optadvisor.widget.ModifyItem
            android:id="@+id/user_info_modify_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:modify_text="生日"
            android:background="#ffffff"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_marginLeft="15dp" />

        <utf8.optadvisor.widget.ModifyItem
            android:id="@+id/user_info_modify_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:modify_text="电话"
            android:background="#ffffff"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_marginLeft="15dp" />

        <utf8.optadvisor.widget.ModifyItem
            android:id="@+id/user_info_modify_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:modify_text="邮箱"
            android:background="#ffffff"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD" />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="1dp"
            android:background="#BDBDBD"/>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/introduction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/icon_left"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:ellipsize="end"
                android:ems="5"
                android:lines="1"
                android:text="简介"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/user_info_modify_introduction"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/introduction"
                android:ellipsize="end"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="16sp"
                android:background="@color/textWhite"
                android:textColor="#000000" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/user_modify_bt_confirm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/textWhite"
                android:text="保存信息"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/user_modify_bt_password"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/textWhite"
                android:text="修改密码"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>