<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/option_show"
    android:background="@color/colorButton"
    android:layout_height="match_parent"
    tools:context=".fragment.OptionShow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="7dp">
        <Button
            android:id="@+id/button_50ETF"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="50ETF" />
        <Button
            android:id="@+id/button_option"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="期权"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frame_50ETF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <ScrollView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/colorLightWhite"
            android:alpha="0.9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="华夏上证 50ETF"
            android:textSize="27dp"
            android:textColor="@color/darkSlateGray"
            android:layout_gravity="center_horizontal" />
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="当前价格"
                    android:textColor="@color/darkSlateGray" />
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/present_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/darkSlateGray"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="涨跌"/>

                <TextView
                    android:textSize="15sp"
                    android:id="@+id/ups_and_downs"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="昨收"
                    android:textColor="@color/darkSlateGray"/>
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/yesterday_end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="今开"
                    android:textColor="@color/darkSlateGray"/>

                <TextView
                    android:textSize="15sp"
                    android:id="@+id/today_start"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="最高"
                    android:textColor="@color/darkSlateGray"/>
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/highest_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="最低"
                    android:textColor="@color/darkSlateGray"/>

                <TextView
                    android:textSize="15sp"
                    android:id="@+id/lowest_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="成交量"
                    android:textColor="@color/darkSlateGray"/>
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/quantity"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="成交额"
                    android:textColor="@color/darkSlateGray"/>

                <TextView
                    android:textSize="15sp"
                    android:id="@+id/volume"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="更新时间"
                    android:textColor="@color/darkSlateGray"/>
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/update_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="交易状态"
                    android:textColor="@color/darkSlateGray"/>

                <TextView
                    android:textSize="15sp"
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:layout_marginTop="10dp"
            android:id="@+id/line_chart"
            android:alpha="0.9"
            android:padding="10dp"
            android:background="@color/colorLightWhite"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />
        <com.github.mikephil.charting.charts.CandleStickChart
            android:layout_marginBottom="60dp"
            android:id="@+id/candle_stick_chart"
            android:alpha="0.9"
            android:padding="10dp"
            android:background="@color/colorLightWhite"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />
    </LinearLayout>
    </ScrollView>
    </FrameLayout>
    </LinearLayout>

</FrameLayout>